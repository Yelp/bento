<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.yelp.android.bentosampleapp">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".GridComponentsActivity" />
        <activity android:name=".HorizontalGridComponentsActivity" />
        <activity android:name=".RecyclerViewActivity" />
        <activity android:name=".ComponentReplacementActivity" />
        <activity android:name=".ListViewActivity" />
        <activity android:name=".ListVisibilityActivity" />
        <activity android:name=".ViewPagerActivity" />
        <activity android:name=".ViewPagerGridActivity" />
        <activity android:name=".ReorderListActivity" />
    </application>

</manifest>